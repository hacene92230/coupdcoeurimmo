{% extends 'base.html.twig' %}

{% block title %}Contact {{ parent() }} {% endblock %}

{% block body %}
    <h1>Consultation d'une demande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ contact.content }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Créé à</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Résolu</th>
                <td>{{ contact.resolved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">back to list</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
