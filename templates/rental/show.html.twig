{% extends 'base.html.twig' %}

{% block title %}Location {{ rental.property.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="mb-0">Détails de la location</h1>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Date de début</dt>
                            <dd class="col-sm-9">{{ rental.dateStart ? rental.dateStart|date('Y-m-d') : '' }}</dd>
                            <dt class="col-sm-3">Date de fin</dt>
                            <dd class="col-sm-9">{{ rental.dateEnd ? rental.dateEnd|date('Y-m-d') : '' }}</dd>
                            <dt class="col-sm-3">Bien loué</dt>
                            <dd class="col-sm-9"><a href="{{ path('app_properties_show', {'id': rental.property.id}) }}" class="text-decoration-none">{{ rental.property.title }}</a></dd>
                            <dt class="col-sm-3">Locataire</dt>
                            <dd class="col-sm-9">{{ rental.tenant.name }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
