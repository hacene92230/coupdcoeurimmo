{% extends 'base.html.twig' %}

{% block title %}Les demandes de Location {{ parent() }} {% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des Demandes de Location</h1>

        {% if rental_applications is not empty %}
            <div class="list-group">
                {% for rental_application in rental_applications %}
                    <div class="list-group-item">
                        <h5 class="mb-1">Demande de Location #{{ rental_application.id }}</h5>
                        <ul class="list-unstyled mb-1">
                            <li><strong>Carte d'Identité :</strong> {{ rental_application.idCard }}</li>
                            <li><strong>Formulaire Fiscal :</strong> {{ rental_application.taxForm }}</li>
                            <li><strong>Bulletin de Paie :</strong> {{ rental_application.payStub }}</li>
                            <li><strong>Preuve de Résidence :</strong> {{ rental_application.proofResidence }}</li>
                            <li><strong>Bulletin de Paie du Garant :</strong> {{ rental_application.guarantorPayStub }}</li>
                            <li><strong>Garant :</strong> {{ rental_application.guarantor ? 'Oui' : 'Non' }}</li>
                        </ul>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_rental_application_show', {'id': rental_application.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                            <a href="{{ path('app_rental_application_edit', {'id': rental_application.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Aucun enregistrement trouvé
            </div>
        {% endif %}
    </div>
{% endblock %}
