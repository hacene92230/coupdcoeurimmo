<div class="d-flex justify-content-center">


{{ form_start(form, {'attr': {'class': 'form-horizontal  border border-3 rounded shadow p-3 mb-5 bg-light text-center w-50 p-5 my-5'}}) }}
    <div class="form-group row">
        {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'col-md-6 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.name, {'attr': {'class': ' form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.describ, 'Décrivez en quelques phrases la catégorie', {'label_attr': {'class': 'col-md-6 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.describ, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.describ) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 offset-sm-2">
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
{{ form_end(form) }}
</div>