{% extends 'base.html.twig' %}

{% block title %}Properties index{% endblock %}

{% block body %}
    <h1>Properties index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre de pi√®ces</th>              
                <th>Type de la transaction</th>
                <th>Loyer</th>
                <th>Prix</th>
                <th>Ce bien dispose d'un jardin</th>
                <th>Type du logement</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.roomNumber }}</td>
                <td>{{ property.transactionType ? "location": "vente" }}</td>
                                <td>{{ property.rent }}</td>
                <td>{{ property.price }}</td>
