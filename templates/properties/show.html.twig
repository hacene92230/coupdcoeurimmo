{% extends 'base.html.twig' %}

{% block title %}Properties{% endblock %}

{% block body %}
    <h1>Properties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>RoomNumber</th>
                <td>{{ property.roomNumber }}</td>
            </tr>
            <tr>
                <th>Sale</th>
                <td>{{ property.sale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Rental</th>
                <td>{{ property.rental ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Rent</th>
                <td>{{ property.rent }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ property.price }}</td>
            </tr>
            <tr>
                <th>Garden</th>
                <td>{{ property.garden ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>House</th>
                <td>{{ property.house ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Apartment</th>
                <td>{{ property.apartment ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ property.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ property.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_properties_index') }}">back to list</a>

    <a href="{{ path('app_properties_edit', {'id': property.id}) }}">edit</a>

    {{ include('properties/_delete_form.html.twig') }}
{% endblock %}
