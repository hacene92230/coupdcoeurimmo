<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="POST">
        {{ form_start(form) }}
        <div class="form-group">
          {{ form_label(form.placeType, 'Type du lieu', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.placeType, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.placeNumber, 'Numéro de rue / avenue...', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.placeNumber, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.city, 'Votre ville', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.zipCode, 'Code postal', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.name, 'Votre prénom', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>

{% if app.user is null %}
        <div class="form-group">
          {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
{% endif %}

        <button class="btn btn-primary btn-block">{{ button_label|default('Créer un compte') }}</button>
        
        {{ form_end(form) }}
      </form>
    </div>
  </div>
</div>
