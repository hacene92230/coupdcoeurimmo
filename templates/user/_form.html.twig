<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="POST">
        {{ form_start(form) }}
        {% if app.user is not empty %}
			{% for role in app.user.roles %}
				{% if role == "ROLE_ADMIN" %}
        <div class="form-group">
          {{ form_label(form.roles, 'Rôle de cet utilisateur', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
{% endif %}
{% endfor %}
{% endif %}
        <div class="form-group">
          {{ form_label(form.placeType, 'Type du lieu de résidence', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.placeType, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.placeNumber, 'Numéro du lieu précédemment choisis', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.placeNumber, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.city, 'Votre ville', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.zipCode, 'Code postal', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.name, 'Votre prénom', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>

{% if app.user is null %}
        <div class="form-group">
          {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
{% endif %}

<div class="form-group">
    <input type="checkbox" id="acceptCGUandCGV" name="acceptCGUandCGV" required>
    <label for="acceptCGUandCGV">En m'inscrivant, je reconnais avoir lu et accepté l'intégralité des <a href="{{ path('app_cgu') }}">CGU</a> et des <a href="{{ path('app_cgv') }}">CGV</a></label>
  </div>
        <button class="btn btn-primary btn-block">{{ button_label|default('Créer un compte') }}</button>
        
        {{ form_end(form) }}
      </form>
    </div>
  </div>
</div>
