  <style>
    #search-container {
      position: relative;
      width: 100%;
      height: 38em;
      background-image: url('{{ asset('images/maison.png') }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    #search-container::before {
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.5); /* Opacité de 50% */
    }
	@media (min-width: 1200px) {
  .container {
    max-width: 81em;
  }
    #form_search {
      color: white;
      position: relative;
      z-index: 1;
      padding: 20px; /* Ajout de rembourrage pour espacer le contenu du formulaire */
      top:5rem;
    }

    /* Ajout de styles pour les champs de formulaire */
    #form_search input[type="text"],
    #form_search input[type="number"],
    #form_search select {
      background-color: rgb(255, 255, 255);/* Fond semi-transparent blanc */
      border: none;
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 10px; /* Espacement entre les champs */
    }

    #form_search button {
      background-color: #cd2147; /* Rouge de l'agence */
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      color: white;
      cursor: pointer;
    }
	#titre1{
	font-size: 3.5rem !important;
	}
    #form_search button:hover {
      background-color: #941d37; /* rouge foncé au survol */
    }
  </style>

<div id="search-container">
  <div class="container" id="form_search">
    <h1 id="titre1">Vous souhaitez acheter ou louer un bien ?</h1>
    <h2 class="mb-4"> Nous sommes là pour vous aider) </h2>
    {{ form_start(form) }}
    <div class="form-row" style="padding-top: 3em;">
      <div class="form-group col-md-4">
        {{ form_label(form.inputVille, 'Ville') }}
        {{ form_widget(form.inputVille, {'attr': {'class': 'form-control', 'placeholder': 'Entrez une ville'}}) }}
      </div>
      <div class="form-group col-md-4">
        {{ form_label(form.selectTypeBien, 'Type de bien') }}
        {{ form_widget(form.selectTypeBien, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group col-md-4">
        {{ form_label(form.selectTransaction, 'Type de transaction') }}
        {{ form_widget(form.selectTransaction, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        {{ form_label(form.inputPrixMin, 'Prix minimum') }}
        {{ form_widget(form.inputPrixMin, {'attr': {'class': 'form-control', 'placeholder': 'Prix minimum'}}) }}
      </div>
      <div class="form-group col-md-4">
        {{ form_label(form.inputPrixMax, 'Prix maximum') }}
        {{ form_widget(form.inputPrixMax, {'attr': {'class': 'form-control', 'placeholder': 'Prix maximum'}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <button type="submit" class="btn btn-primary">Rechercher</button>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
</div>
